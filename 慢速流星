    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: #0a0e29;
            color: white;
            font-family: 'Arial', sans-serif;
            height: 100vh;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            position: relative;
        }

        .container {
            text-align: center;
            z-index: 10;
            padding: 20px;
            background: rgba(10, 14, 41, 0.7);
            border-radius: 15px;
            backdrop-filter: blur(5px);
            max-width: 600px;
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: #e0e0ff;
            text-shadow: 0 0 10px rgba(135, 206, 250, 0.5);
        }

        p {
            font-size: 1.2rem;
            margin-bottom: 1.5rem;
            color: #b0b0ff;
            line-height: 1.6;
        }

        .controls {
            margin-top: 20px;
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            justify-content: center;
        }

        button {
            background: rgba(30, 40, 90, 0.8);
            color: white;
            border: 1px solid #4a5fc1;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 1rem;
        }

        button:hover {
            background: rgba(50, 70, 150, 0.9);
            box-shadow: 0 0 10px rgba(100, 120, 255, 0.5);
        }

        .meteor {
            position: absolute;
            width: 2px;
            height: 100px;
            background: linear-gradient(to bottom, 
                rgba(255, 255, 255, 0) 0%, 
                rgba(255, 255, 255, 1) 30%, 
                rgba(100, 150, 255, 0.8) 70%, 
                rgba(50, 100, 200, 0) 100%);
            border-radius: 50%;
            filter: blur(1px);
            z-index: 1;
            opacity: 0;
        }

        .star {
            position: absolute;
            background-color: white;
            border-radius: 50%;
            animation: twinkle 4s infinite;
        }

        @keyframes twinkle {
            0%, 100% { opacity: 0.2; }
            50% { opacity: 1; }
        }

        .footer {
            position: absolute;
            bottom: 20px;
